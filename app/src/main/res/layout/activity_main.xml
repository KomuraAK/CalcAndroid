<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/BGCFundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@color/ESFundo"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="(2+233)-8" />

        <TextView
            android:id="@+id/saida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/ECg"
            android:textSize="50sp"
            tools:text="0" />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="456dp"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDividir"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="/" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMultiplicar"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="x" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSomar"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="+" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubtrair"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="-" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b7"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b8"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b9"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLimpar"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="C" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b4"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b5"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b6"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChave_aberta"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="(" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b1"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b2"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b3"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChave_fechada"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text=")" />
        </TableRow>

        <TableRow android:layout_height="91dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b0"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_light"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                style="@style/BtnS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="@font/poppins_light"
                android:text="." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resultado"
                style="@style/BtnC"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:fontFamily="@font/poppins_light"
                android:text="=" />
        </TableRow>

    </TableLayout>

</LinearLayout>